# Production Environment Configuration
# This file contains environment variables for production environment
# Contains production API endpoints and optimized settings

# Environment
NODE_ENV=production
EXPO_PUBLIC_ENV=production

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.LeafWise.com/api
EXPO_PUBLIC_PLANT_ID_API_URL=https://api.plant.id/v2
EXPO_PUBLIC_PLANT_ID_API_KEY=your_plant_id_api_key_production

# Firebase Configuration - Production
EXPO_PUBLIC_FIREBASE_API_KEY_PROD=your_firebase_api_key_production
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN_PROD=LeafWise.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID_PROD=LeafWise-production
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET_PROD=LeafWise-production.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID_PROD=987654321
EXPO_PUBLIC_FIREBASE_APP_ID_PROD=1:987654321:web:production123456

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_MOCK_DATA=false

# Logging Configuration
EXPO_PUBLIC_LOG_LEVEL=error
EXPO_PUBLIC_ENABLE_CONSOLE_LOGGING=false
EXPO_PUBLIC_ENABLE_REMOTE_LOGGING=true

# Performance Configuration
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_API_TIMEOUT_MS=5000
EXPO_PUBLIC_IMAGE_UPLOAD_TIMEOUT_MS=20000

# Development Tools (disabled in production)
EXPO_PUBLIC_ENABLE_FLIPPER=false
EXPO_PUBLIC_ENABLE_REACTOTRON=false

# Security
EXPO_PUBLIC_ENABLE_SSL_PINNING=true
EXPO_PUBLIC_ENABLE_ROOT_DETECTION=true