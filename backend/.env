# Development Environment Configuration
# Copy from .env.example and modify as needed

# FastAPI Configuration
PROJECT_NAME="Plant Social API - Development"
VERSION="1.0.0"
API_V1_STR="/api/v1"
SECRET_KEY="dev-secret-key-change-in-production-12345678901234567890"

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days
ALGORITHM="HS256"

# CORS Settings
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://localhost:8080,http://127.0.0.1:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"

# Database Configuration
POSTGRES_SERVER="localhost"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DB="plant_social_db"
POSTGRES_PORT="5432"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# LocalStack Configuration (for development)
AWS_ACCESS_KEY_ID="test"
AWS_SECRET_ACCESS_KEY="test"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="plant-social-media"
AWS_ENDPOINT_URL="http://localhost:4566"

# Development Settings
TESTING=false